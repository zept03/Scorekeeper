<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.hyperdev.scorekeeper.activities.MainActivity">

    <fragment
        android:id="@+id/TeamOneFragment"
        android:name="tech.hyperdev.scorekeeper.fragments.ScoreFragment"
        android:layout_width="368dp"
        android:layout_height="145dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TeamTwoFragment"
        android:layout_above="@+id/TeamTwoFragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/TeamTwoFragment"
        android:name="tech.hyperdev.scorekeeper.fragments.ScoreFragment"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
